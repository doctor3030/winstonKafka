{
  "name": "winstonkafka",
  "version": "0.0.1",
  "description": "Winston based logger with Kafka transport",
  "files": ["target/**/*"],
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register 'tests/test_default_logger.ts'",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doctor3030/winstonKafka.git"
  },
  "author": "Dmitry Amanov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/doctor3030/winstonKafka/issues"
  },
  "homepage": "https://github.com/doctor3030/winstonKafka#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@types/uuid": "^8.3.3",
    "chai": "^4.3.4",
    "eslint": "^8.5.0",
    "kafkajs": "^1.15.0",
    "logform": "^2.3.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
